<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.detail.DetailStoryActivity">

    <ImageView
        android:id="@+id/ivStoryDetail"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="@dimen/margin_10dp"
        android:src="@drawable/ic_register_ilustration"
        android:alpha="0"
        android:transitionName="photo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/ivStoryDetail">

        <TextView
            android:id="@+id/tvNameDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10dp"
            android:layout_marginBottom="@dimen/margin_10dp"
            android:layout_marginEnd="@dimen/margin_20dp"
            android:layout_marginStart="@dimen/margin_20dp"
            android:text="@string/app_name"
            android:textColor="@color/textColor"
            android:textSize="18sp"
            android:fontFamily="@font/helvetica_bold"
            android:alpha="0"
            android:transitionName="name"/>

        <TextView
            android:id="@+id/tvCreatedAtDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_20dp"
            android:layout_marginStart="@dimen/margin_20dp"
            android:layout_marginBottom="@dimen/margin_10dp"
            android:text="@string/app_name"
            android:textColor="@color/textColor"
            android:fontFamily="@font/helvetica_bold"
            android:alpha="0"
            android:transitionName="createAt"/>

        <TextView
            android:id="@+id/tvDescriptionDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_20dp"
            android:layout_marginStart="@dimen/margin_20dp"
            android:layout_marginBottom="@dimen/margin_10dp"
            android:text="@string/app_name"
            android:textColor="@color/textColor"
            android:fontFamily="@font/helvetica"
            android:alpha="0"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>