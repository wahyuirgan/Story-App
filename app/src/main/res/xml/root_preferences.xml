<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:iconSpaceReserved="false"
        app:title="@string/setting">

        <Preference
            app:iconSpaceReserved="false"
            app:key="@string/title_language"
            app:title="@string/title_language_option" />

        <ListPreference
            app:defaultValue="default"
            app:entries="@array/theme_options_key"
            app:entryValues="@array/theme_options_values"
            app:iconSpaceReserved="false"
            app:key="@string/key_app_theme"
            app:title="@string/change_theme"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

</PreferenceScreen>